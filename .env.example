# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
MONGODB_URI=mongodb://admin:password123@localhost:27017/nestjs-starter?authSource=admin

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-characters-long-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=10

# API Documentation
SWAGGER_ENABLED=true

# CORS
CORS_ENABLED=true
CORS_ORIGIN=*

# Application URL (for BetterAuth)
APP_URL=http://localhost:3000

# Frontend (for OAuth redirects)
FRONTEND_URL=http://localhost:3001

# BetterAuth - GitHub OAuth (Optional - leave empty to disable)
# Create OAuth App at: https://github.com/settings/developers
# Callback URL: http://localhost:3000/api/v1/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# BetterAuth - Microsoft Entra ID OAuth (formerly Azure AD)
# Register app at: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
# Multi-tenant: Use 'common' for tenantId (allows users from any organization)
# Single-tenant: Use your specific tenant ID (restricts to your organization only)
# Callback URL: http://localhost:3000/api/v1/auth/callback/microsoft
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=common
